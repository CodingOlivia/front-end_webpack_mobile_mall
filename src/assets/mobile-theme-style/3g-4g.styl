.m-3g-4g
  .icon-back
    display block
    width 0.4rem
    height 0.3rem
    background url("~statics/mobileImages/heard/ico_back.png") center / 100%  no-repeat
    position absolute
    left 0.34rem
    top 50%
    transform translateY(-50%)
  .panel-container
    position relative
    width 100%
    height 3.12rem
    background url("~statics/3g-bg.png") no-repeat center center
    background-size cover
    padding-left 0.32rem
    .info-wrapper
      position absolute
      margin-top 1.18rem
    .titletext
      font-size 0.4rem
      color #fff
      margin 0
      line-height 0.6rem
      letter-spacing 0
    .price
      font-size 0.48rem
      color #fff 
      display block
      letter-spacing 0
      position absolute
      top 50%
      right 0.86rem
      transform translateY(-50%)
      text-shadow 0 0 40px #66bbff
    .sub
      font-size 0.32rem
      vertical-align baseline
    .date
      color #70c29d
      margin-top 0.06rem
    .account
      height 0.64rem
      display flex
      justify-center center
      align-items center
      padding-left 0.32rem
      color #fff
      position absolute
      bottom 0 
      left 0
      width 100%
      background-color rgba(0,0,0,.4)
      letter-spacing 0

  .panel
    padding 0 0.24rem
    .list-item
      padding 0.48rem 0
      border-bottom 1px solid #e6e6e6
      align-items center
    .left
      width 1.62rem
      height 1.6rem
      margin-right 0.24rem
      img
        max-width 100%
    .right
      flex 1
      overflow hidden   
    .item-title
      color #252525
    .item-price
      color #70c29d
    .attr
      margin-top 0.2rem