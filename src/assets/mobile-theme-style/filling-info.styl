.fillingBox-mobile
  background $all-color-2
  width: 100%
  margin-top 1.28rem
  font-family HelveticaNeue !important
  font-size 16px
  padding 0 16px
  .error-message
    width 100%
    background #ff2973
    color #fff
    padding .08rem .16rem
    min-height .56rem
    margin-bottom .30rem
    .icon-warning
        width .24rem
        height .24rem
        display inline-block
        background url('~statics/icon-warning.png') no-repeat center
        background-size 100%
        margin-top .04rem
        margin-right .16rem
  .fillHr
    width 100%
    padding 1.6rem 0.24rem 0
    background #fff
    box-sizing border-box
    position fixed
    top 0
    left 0
    z-index 300
    
    span  
       display block
       border-bottom 2px solid $all-color-1 
  .main
    
    .deliveryDetails
      width: 100%
      padding-top 20px
      .title
        margin-bottom: 10px
        padding 0 20px
        h3
          margin: 0
          font-size:18px
          font-weight: bold
          width 90%
        span
          margin: 0
          font-size: 12px
          line-height:1
          color: $all-color-3
          display block
          margin-top .5rem
      .contain
        width: 100%
        padding: 0 20px
        margin-bottom 16px
        .panel
          margin-bottom .58rem
          .panel-title
            margin: 0
            font-size: 14px
            font-weight: bold
            margin-bottom .30rem
            width 100%
            position relative
            
            .panel-title-detail
               font-size: 14px
               color $all-color-3
               margin-bottom 0
               font-weight normal
            .title-absolute-right
               position absolute
               right 16px
               top 8px
               color $all-color-1
               font-weight normal
               text-align right
               .toggle-text
                  max-width calc( 100vw - 220px)
                  overflow hidden
                  display inline-block
                  white-space nowrap
                  line-height 1.2
                  text-overflow ellipsis
          .m-right--small 
              margin-right 16px
          .m-bottom--small 
              margin-bottom 16px
          .m-top-1
              margin-top -1px!important
          .field-select
              position relative
              margin-top 0
              margin-bottom 18px
              label
                color $all-color-3
                font-size 12px 
                position absolute 
                top 8px
                left 14px
                em
                  font-style normal 
                  color $negative 
                  margin-right 3px
              .field-view-select
                border 1px solid $border-color-1
                padding 24px 14px 2px 14px
                .q-if-control
                  position relative
                  display inline
                  font-size 20px
              .q-if:after
                opacity 0
              .q-if:before
                opacity 0
              .q-if-label
                color $all-color-3
              .q-if-focused
                .q-if-label
                    color $all-color-3
              &.q-field-with-error 
                margin-bottom 0
                .q-field-bottom   
                    min-height 18px
                    line-height 14px
                    padding 2px
          .field-inp
            position relative
            margin-bottom 0
            margin-top 0
            display flex
            height .94rem
            box-sizing border-box
            border 0.02rem solid #e5e5e5
            display flex 
            &.require:before
               position absolute
               left -.20rem
               content '*'
               color $negative
               top .30rem
               font .24rem
            i 
              font-size 20px
            label
              color $all-color-3
              font-size 12px 
              position absolute 
              top 8px
              left 14px
              display none
              em
                font-style normal 
                color $negative 
                margin-right 3px
            .field-view-inp
              font-size 0.26rem
              padding 0 .16rem
              height .94rem
              input
                  &::-webkit-input-placeholder
                     color $all-color-3
              .q-if-control
                  position relative
              &.dateEmpty
                  .q-input-target
                     color $all-color-3
              &.q-datetime-input
                 .q-if-control
                     font-size 0
                     width 18px
                     height 18px
                     display inline-block
                     background url('~statics/icon-date.png') no-repeat center
            .q-if:after
              opacity 0
            .q-if:before
              opacity 0
            .q-if-label
              color $all-color-3
            .q-if-focused
              .q-if-label
                  color $all-color-3
            
            &.q-field-with-error 
                  
                  .q-field-bottom   
                     
                      padding 16px
                      position fixed
                      background rgba(0,0,0,.4)
                      width 90%
                      margin 0 auto
                      top 50%
                      border-radius 30px
                      left 5%
                      color #fff
                      text-align center
                      font-size 16px
                      animation tipMessage 3s
                      z-index -5
                      opacity 0
          .m-radio-grop
              padding 13px
              border 1px solid $border-color-1
              .radio-option
                  margin-right .16rem
                  cursor pointer
                  .radio-option-icon
                      width .32rem
                      height .32rem
                      display inline-flex
                      justify-content center
                      text-align center
                      font-size 22px
                      border-radius 50%
                      border 1px solid $border-color-1
                      vertical-align middle
                      margin-right .08rem
                      align-items: center;
                      i
                        display none
                        font-size .24rem
                        position relative
                  label
                      color $font-color-5
                      font-size .28rem
                  &.active
                     .radio-option-icon
                         background $all-color-1
                         color $all-color-2
                         border 1px solid $all-color-1
                         i 
                           display inline           
          .invoice
              .q-touch
                margin -10px 0 0 10px
              .q-toggle-handle
                width 28px
                height 28px
                background-color $all-color-2
                border 1px solid $border-color-1 
              .q-toggle-base
                width 50px
                height 30px
                opacity 1
                border 2px solid $border-color-1 
                margin-top -6px
                &.active
                  border 2px solid #68daa9
              .q-option-inner
                &.active
                  color $background-color-4
          .q-radio
             i 
                font-size 16px
    .action-btn
      padding-bottom 16px
      .btn
        width 100%
        height 36px
        border-radius: 50px
        background-color $background-color-4
        color $all-color-2
        font-size 18px
        text-align center
        line-height 36px
        cursor pointer 
    .filling-mobile-footer
      background $all-color-2
      font-family HelveticaNeue !important
      margin 0 20px 16px 20px
      .filling-footer
        width 100%
        .p-bottom--small
          padding-bottom 16px 
        .agree
          color $font-color-5
          font-size 16px
          font-weight 600
          display inline-block
          span
            color $font-color-4
        .btn
          height .93rem
          border-radius: .5rem
          background-color $all-color-1
          color #fff
          font-size .32rem
          text-align center
          line-height .93rem
          cursor pointer 
          &.disable
              background-color $border-color-1
              color $all-color-2
        .filling-footer-btn
          background $all-color-1
          font-size 14px
          color $all-color-2  
          display inline-flex
          justify-content center
          align-items center
          width .32rem
          height .32rem
          border-radius 50px
          font-size 22px
          cursor pointer
          vertical-align middle
          opacity .2
          i 
            display inline
            font-size .24rem
            position relative
           
          &.active
              opacity 1
    .submit-btn-wrap
       margin .64rem .56rem .32rem .56rem
    .submit-btn
        width 100%
        height .93rem
        border-radius: .5rem
        background-color $all-color-1
        color #fff
        font-size .32rem
        text-align center
        line-height .93rem
        cursor pointer 
  &.fillingBox-supplement
    .mobile-y-inp
        .help
            &.is-danger
                display none
    .mobile-y-select
        .help
            &.is-danger
                display none
    .field-inp
       &.q-field-with-error  
           border 0.02rem solid #ff2973!important
           z-index 2
           color #ff2973!important
           .q-field-bottom
              display none
           input
              color #ff2973!important
              &::-webkit-input-placeholder
                 color #ff2973!important
           .field-view-inp
              &.dateEmpty
                  .q-input-target
                     color #ff2973!important
       

