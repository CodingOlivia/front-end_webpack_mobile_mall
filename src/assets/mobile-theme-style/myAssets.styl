  .myAssets-mobile-box
      width  100%
      margin-top 10px
      .main 
        padding 16px
        .assetList
            .assetItem
               border 1px solid $border-color-1
               padding 16px
               margin-bottom 16px
               font-size 12px
               .p-around--small
                  padding 16px
               .m-left--small 
                  margin-left 16px
               .m-right--small 
                  margin-right 16px
               .level2
                 margin 16px 0 0 0
                 padding 16px
               .assetItem-top
                  position relative
                  border-bottom 1px solid $border-color-1
                  margin-bottom 8px
                  .more
                    position absolute
                    right 0
                    top -3px
                    font-size 20px
                    color $font-color-3
                    i 
                      font-size 16px
               .assetItem-bottom
                  &>div
                    line-height 24px
               .field-view
                  label 
                    color $font-color-3
                    margin-bottom 5px
                  .field-view-con
                    span
                       color $font-color-3
                    em
                      font-style normal 
                      font-size 18px
                      margin-right 5px
                      &.red
                        color $negative
               .title
                  font-weight bold
                  font-size 14px
                  margin-bottom 8px
               .price
                  color $font-color-3
                  margin-bottom 8px
               &.expired
                 &>div
                   color $font-color-3 
   .asset-detail
         height 100%
         position relative
         padding-bottom 40px
         font-size 12px
         .asset-code
            margin 0 16px 8px 16px
            padding 16px 0
            border-bottom 1px solid $border-color-1
         .asset-date
            margin 16px
            p
              line-height 18px
              margin-bottom 8px
              font-size 12px
         .asset-close
            position absolute
            width 100%
            height 40px
            line-height 40px
            text-align center
            font-size 18px
            color $all-color-2
            background $background-color-4