.m-orderReview-wrap
    margin 0.32rem .24rem 1.7rem .24rem
    
    .review-pro
        margin-top .4rem
        border 1px solid $border-color-1
        padding .32rem .24rem
        font-size .28rem
        .review-pro-top
            padding-bottom .32rem
            margin-bottom .24rem
            border-bottom 1px solid $border-color-1
            &>div
              overflow hidden
            i 
               width .38rem
               height .38rem
               background url('~statics/mobileImages/orderReview/icon-start.png') no-repeat center
               background-size 100%
               opacity 1
               &.active
                  background url('~statics/mobileImages/orderReview/icon-start-active.png') no-repeat center
                  background-size 100%
            .q-rating 
                i  
                   &+ i
                      margin-left .12rem
            .review-pro-img
                width 1.6rem
                height 1.6rem
                text-align center
                margin-right .4rem
                img
                    max-width 100%
                    max-height 100%
                    display inline-block
                    position relative
                    top 50%
                    transform translateY(-50%)
            .review-pro-detail
                .review-pro-title
                    margin-bottom .26rem
                    white-space nowrap
                    overflow hidden
                    text-overflow ellipsis
        .review-pro-write
            textarea
                width 100%
                border none
                outline none
                height 2.4rem
                margin-bottom .24rem
                font-family HelveticaNeue-Medium
                -webkit-user-select auto
                &::-webkit-input-placeholder
                     color $all-color-3
        .review-pro-photos
             margin-left -.1rem
             .review-upload-img
                 width 25%
                 padding-left .1rem
                 height 1.5rem
                 overflow hidden
                 text-align center
                 position relative
                 img 
                   width 100%
                   height 100%
                 &.review-upload-icon
                   img
                     position absolute
                     right 0
                     top 0
                     transform translateY(0)
                 i 
                   position absolute
                   right 0
                   top 0
                   width .32rem
                   height .32rem
                   background url('~statics/mobileImages/orderReview/icon-delete.png') no-repeat center
                   background-size 100%
                 input
                    width 100%
                    height 100%
                    opacity 0
             
    .m-orderReview-btn
         position fixed
         bottom 0
         left 0
         width 100%
         height 1.12rem
         text-align center
         color #fff
         font-size .28rem
         background $background-color-7
         line-height 1.12rem
.m-orderReview-top
    border 1px solid $border-color-1
    border-top 1px solid $all-color-1
    font-size .28rem
    padding 0 .24rem
    box-shadow 0px 5px 20px #ccc
    .m-orderReview-title
        padding .42rem 0
        text-align center
        border-bottom 1px solid $border-color-1
            
    .m-orderReview-item
        margin-top .70rem
        color $font-color-5
        font-size .26rem
        &:last-child
            margin-bottom .70rem
        i 
            width .38rem
            height .38rem
            background url('~statics/mobileImages/orderReview/icon-start.png') no-repeat center
            background-size 100%
            opacity 1
            &.active
                background url('~statics/mobileImages/orderReview/icon-start-active.png') no-repeat center
                background-size 100%
        .q-rating 
            i  
                &+ i
                    margin-left .12rem
.orderReview-success
    border 1px solid $border-color-1
    border-top 1px solid $all-color-1
    font-size .28rem
    padding 0 .24rem
    box-shadow 0px 5px 20px #ccc
    margin 1.28rem .24rem 0 .24rem
    text-align center
    .order-success-icon
       margin-top .64rem
       margin-bottom .4rem
       i 
          width 1.04rem
          height 1.04rem
          display inline-block
          background url('~statics/mobileImages/orderReview/icon-success.png') no-repeat center
          background-size 99%
    .order-success-title
       color $font-color-5
       font-family HelveticaNeue-Medium
       margin-bottom .25rem
       font-size .28rem
    .order-success-detail
       font-size .24rem
       color #b2b2b2
       margin-bottom .25rem
    .order-success-pro
       .order-success-item
          width 25%
          padding-left .1rem
          height 1.5rem
          display inline-block
          margin-bottom .4rem
          img
             max-width 100%
             max-height 100%
.orderReview-success-btn
     margin .48rem .72rem 0 .72rem
     .btn
        width 100%
        height .96rem
        text-align center
        color #fff
        background $all-color-1 
        line-height .96rem
        border-radius .96rem
        font-size .32rem
        border 1px solid $all-color-1
        &.negative
            background #fff
            margin-top .32rem
            color $all-color-1
            border 1px solid $border-color-1
      
    
        

