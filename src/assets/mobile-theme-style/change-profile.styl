.change-profile
    .profile-content
        padding 0 0.24rem
    .profile-all   
        border-top 2px solid $all-color-1
        padding-top 0.28rem
        margin-top 0.68rem
        .list-item
            float left
            width 33.333%
            cursor pointer
            position relative
            display flex 
            justify-content center
            align-items center
            padding 0.28rem 0
            img
                height 1.56rem
                width 1.56rem
                border-radius 50%
            i
                display block
                width 0.32rem
                height 0.32rem
                position absolute
                right 0.5rem
                bottom 0.3rem
                border-radius 50%
                background url("~statics/mobileImages/checkOut/ico_provision.png") center / 100% no-repeat    
            &.active
                img
                    border 2px solid $all-color-1
    .btn-wrapper
        height 1.59rem
        width 100%
        display flex 
        justify-content center
        align-items center
        background-color #fff
        position fixed
        left 0
        bottom 0