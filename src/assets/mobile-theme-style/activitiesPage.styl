.activitiesPage
    width 100%
    height 24.5rem
    background url('~statics/images/activities/background.jpg') center no-repeat
    background-size 100% 
    .banner
        width 100%
        height 7.3rem
        background url('~statics/images/activities/banner.png') center no-repeat
        background-size 100% 
    .bannerContent
        width 100%
        height 1.55rem
        box-sizing border-box              
        .bannertext
            width 100%           
            font-size 0.24rem
            color #5cbb92
            text-align center
            letter-spacing 0.5px
            margin-bottom 0.18rem
            font-weight 600
    .wheelSeeding
        width 100%
        height 5.02rem 
        position relative
        .swiper-pagination
            bottom -0.2rem
            left 50%
            transform translateX(-50%)
            .swiper-pagination-bullet
                height 8px
                width 8px
                border 2px solid #00ff92
                border-radius 6px
                margin-left 8px
            .swiper-pagination-bullet-active
                background #00ff92
                width 20px        
        .swiper-container
            width 100%
            height 4.64rem
            display flex
            justify-content center
            align-items center
            .swiper-slide
                width 100%
                height 100%
                display flex
                justify-content center
                align-items center               
                img
                    width 6.36rem
                    height 4.6rem 
                    opacity 0.5
            .swiper-slide-active
                img
                    width 6.36rem
                    height 4.64rem 
                    opacity 1                    
                    transition all 0.5s                      
                                 
                          
           
