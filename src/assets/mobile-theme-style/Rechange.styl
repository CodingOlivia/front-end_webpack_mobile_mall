.Exchange-mobile.main
    display flex
    justify-content center
    flex-direction column
    width 100%
    font-family HelveticaNeue
    background #fff
    .Exchange-inner
        padding 16px
        .field-inp
            position relative
            margin-bottom .18rem
            margin-top 0
            display flex
            height .94rem
            box-sizing border-box
            border 0.02rem solid #e5e5e5
            display flex 
            i 
              font-size 20px
            label
              color $all-color-3
              font-size 12px 
              position absolute 
              top 8px
              left 14px
              display none
              em
                font-style normal 
                color $negative 
                margin-right 3px
            .field-view-inp
              font-size 0.26rem
              padding 0 .16rem
              height .94rem
              input::-webkit-input-placeholder
                  color $all-color-3
              .q-if-control
                  position relative
                
            .q-if:after
              opacity 0
            .q-if:before
              opacity 0
            .q-if-label
              color $all-color-3
            .q-if-focused
              .q-if-label
                  color $all-color-3
            
            &.q-field-with-error 
                  .q-field-bottom   
                      display block
                      padding 16px
                      position fixed
                      background rgba(0,0,0,.4)
                      width 90%
                      margin 0 auto
                      top 50%
                      border-radius 30px
                      left 5%
                      color #fff
                      text-align center
                      font-size 16px
                      animation tipMessage 3s
                      z-index 5
                      opacity 0
        .cardSelect-title
            margin-top 20px
            color $all-color-3
            font-size 14px
        .cardList
            margin 0 -10px
            zoom:1
            &:after
              display block
              clear both
              content ""
              visibility hidden 
              height 0
            &>div 
              float left
              padding 8px 10px
              box-sizing border-box
              width 25%
              &>span  
                display block
                text-align center
                border 1px solid $border-color-1
                padding 16px 14px
                font-size 14px
                cursor pointer
                color $all-color-3 
                white-space nowrap
                text-overflow ellipsis
                overflow hidden
                line-height 16px
                height 50px
                .inp-reset
                  margin 0
                  padding-bottom 0 
                  height 16px
                  min-height auto
                  &:before
                    opacity 0
                  &:after
                    opacity 0
                  .q-if-inner
                    min-height 16px!important
                  input
                    height 16px
                    border none 
                    outline none 
                    font-size 14px
                    line-height 16px
                    width 100%
                    color $all-color-3 
                    &::-webkit-input-placeholder
                        color $all-color-3 
                        font-size 14px
              &.active
                &>span 
                    border 1px solid $font-color-4
                    color $all-color-1
                    input 
                      color $all-color-1
        .confirm-bottom
            position relative
            margin 18px 0 14px 0
            .checkBox
                font-size 14px
                color #fff
                margin 0 8px
                display -ms-flexbox
                display flex
                -ms-flex-pack center
                justify-content center
                -ms-flex-align center
                align-items center
                width 32px
                height 32px
                border-radius 50px
                font-size 22px
                background $all-color-1
                cursor pointer
                opacity .2
                &.active
                  opacity 1
                i
                  font-size 16px
            .agree
              line-height 32px
              color $font-color-5
              font-size 16px
              font-weight 600
              
              span
                color $font-color-4
            .btn
              width 100%
              height 36px
              border-radius: 50px
              background-color $background-color-4
              color $all-color-2
              font-size 18px
              text-align center
              line-height 36px
              cursor pointer
              margin-top 14px
              &.disable
                background-color $border-color-1
                color $all-color-2

.modal 
    .model-mobile-center
        padding 0 8px 0px 8px
        margin: 76px 8px 66px 8px;
        max-height calc(100% - 138px)
        font-size 16px
        overflow-y auto
        .font-12
            font-size 12px
        .font-14
            font-size 14px
        .font-16
            font-size 16px
        .m-bottom--small
            margin-bottom 16px
        .m-top--small
            margin-top 16px
    .model-title
        position absolute
        font-size 20px
        font-weight bold
        padding 24px
        top 0
        left 0
        width 100%
        background $all-color-2
        z-index 5
        .model-close
            position absolute 
            top 26px
            right 24px
            cursor pointer
            width 18px
            height 18px
            display block
            background url('~statics/sign/close.png') top center no-repeat
    .model-mobile-footer
        position absolute
        padding-top 16px
        bottom 0
        left 0
        width 100%
        background $all-color-2
        color $font-color-5
        font-size 13px
        .model-footer-inner
        position relative
        .model-footer-action
            text-align right
        .btn
            width 50%
            height 50px
            background-color $background-color-4
            border 1px solid $background-color-4
            color $all-color-2
            font-size 18px
            text-align center
            text-transform uppercase
            display inline-block
            cursor pointer
            line-height 50px
            &.negative
                background-color $all-color-2
                border 1px solid $border-color-1
                color $all-color-1 
            &.disable
                background-color $border-color-1
                color $all-color-2

@media (max-width: 415px)
    .xxs-col-4
      width 33.33%!important