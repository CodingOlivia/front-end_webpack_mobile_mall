.red-plan-4g-data
  .icon-back
    display block
    width 0.4rem
    height 0.3rem
    background url("~statics/mobileImages/heard/ico_back.png") center / 100%  no-repeat
    position absolute
    left 0.34rem
    top 50%
    transform translateY(-50%)
  .panel-container
    position relative
    width 100%
    height 3.7rem
    background url("~statics/4g-bg.png") no-repeat center center
    padding 0.32rem
    .titletext
      font-size 0.4rem
      color #fff
      margin 0
      line-height 0.6rem
      letter-spacing 0
    .price
      font-size 0.4rem
      color #fff
      display block
      line-height 0.6rem
      letter-spacing 0
    .sub
      font-size 0.24rem
      vertical-align baseline
    .subtext
      margin 0
      margin-top 0.22rem
      line-height 0.32rem
      word-break break-word
      font-size 0.24rem
      color #fff
    .tag-state
      position absolute
      right 0.24rem
      top 0.4rem
      font-size 0.22rem
      border-radius 6px
      border 1px solid #02d5c7
    .state-up
      display flex
      align-items center
      justify-content center
      height 0.32rem
      color #fff
      background-color #02d5c7
      padding 0 4px
      white-space nowrap
      border-top-left-radius 4px
      border-top-right-radius 4px
    .state-down
      display flex
      align-items center
      justify-content center
      height 0.48rem
      color #02d5c7
      padding 0 4px
      white-space nowrap
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px
  .extras-panel
    padding 0.32rem
    .extras-title
      margin 0
      padding 0.16rem 0 0.28rem 0
    .list-item      
      border-top 1px solid #e6e6e6
      display flex
      height 2.06rem    
      &:last-child
        border-bottom 1px solid #e6e6e6
    .left
      width 7rem 
      height 100%
      box-sizing border-box
      letter-spacing 0.5px
      padding 0.34rem 0 0.15rem 0 
      .title
        font-size 0.22rem
        height 0.46rem
        line-height 0.46rem
        font-weight bold
        color #252525
      .desc
        font-size 0.2rem
        height 0.44rem
        line-height 0.44rem
        color #666666
      .price
        font-size 0.24rem
        height  0.7rem
        line-height 0.7rem
        font-weight bold
        color #70c29d
    .right 
      width 0.46rem
      height 100% 
      display flex
      justify-content center
      align-items center
      .selected
        width 0.32rem
        height 0.32rem
        background url("~statics/images/checkout/selected.png") center  no-repeat
        background-size 100%
      .null
        width 0.32rem
        height 0.32rem        
        background url("~statics/images/checkout/ring.png") center  no-repeat 
        background-size 100%     
  .btn-wrapper
    padding 0 0.8rem
    width 100%
    margin-top -0.1rem
    margin-bottom 0.6rem
   
    
    
